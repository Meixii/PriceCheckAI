{
  "name": "J5PriceChecker",
  "version": "1.0.0",
  "description": "Philippines Medicine Price Checker - Desktop Application",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"wait-on http://localhost:5173 http://localhost:3000 && electron .\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:portable": "electron-builder --win portable",
    "dist:dir": "electron-builder --config electron-builder.yml",
    "pack": "electron-packager . J5PriceCheck --platform=win32 --arch=x64 --out=dist --overwrite --icon=logo.png",
    "clean:cache": "rimraf node_modules/.cache && rimraf dist",
    "postinstall": "cd frontend && npm install && cd ../backend && npm install"
  },
  "build": {
    "appId": "com.j5apps.pricecheckai",
    "productName": "J5 PriceCheck",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/**/*.ts",
      "!backend/src/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "backend/**/*",
      "frontend/dist/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "logo.png",
      "sign": null,
      "certificateFile": null,
      "certificatePassword": null,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "mac": {
      "target": "dmg",
      "icon": "logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "allowElevation": false
    },
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "compression": "normal",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "keywords": [
    "medicine",
    "price",
    "checker",
    "philippines",
    "pharmacy"
  ],
  "author": "ZenGarden",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.2",
    "rimraf": "^5.0.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "express": "^4.18.2"
  }
}
 